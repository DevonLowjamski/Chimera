using System;
using UnityEngine;
using System.Collections.Generic;


namespace ProjectChimera.Data.Economy
{
    /// <summary>
    /// SIMPLIFIED: Basic transaction structures aligned with Project Chimera's simple economy vision.
    /// Focuses on essential in-game currency and trading mechanics for schematics and genetics.
    /// </summary>


    /// <summary>
    /// Simple transaction structure for in-game purchases and trading
    /// </summary>
    [System.Serializable]
    public class Transaction
    {
        public string TransactionId;
        public TransactionType Type = TransactionType.MaterialPurchase;
        public decimal Amount = 0m;
        public string ItemId;
        public string Description;
        public DateTime Timestamp;
        public bool Success = true;
    }

    /// <summary>
    /// Player's currency balance
    /// </summary>
    [System.Serializable]
    public class PlayerCurrency
    {
        public string PlayerId;
        public decimal CashBalance = 1000m;
        public int SkillPoints = 100;
        public DateTime LastUpdated;
    }

    /// <summary>
    /// Basic trading transaction for marketplace
    /// </summary>
    [System.Serializable]
    public class MarketplaceTransaction
    {
        public string TransactionId;
        public string SellerId;
        public string BuyerId;
        public string ItemId;
        public string ItemType; // "Schematic" or "Genetic"
        public decimal Price;
        public int SkillPointsCost;
        public DateTime TransactionDate;
        public bool Completed = false;
    }
}
