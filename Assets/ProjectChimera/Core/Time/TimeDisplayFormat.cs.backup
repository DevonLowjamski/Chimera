namespace ProjectChimera.Core
{
    /// <summary>
    /// Available time display formats for the game
    /// </summary>
    public enum TimeDisplayFormat
    {
        /// <summary>
        /// Standard 12-hour format with AM/PM
        /// </summary>
        Hour12,

        /// <summary>
        /// 24-hour format
        /// </summary>
        Hour24,

        /// <summary>
        /// Relative time (e.g., "2 hours ago")
        /// </summary>
        Relative,

        /// <summary>
        /// Elapsed time format (e.g., "2:30:45")
        /// </summary>
        Elapsed,

        /// <summary>
        /// Custom format string
        /// </summary>
        Custom,

        /// <summary>
        /// Compact display format
        /// </summary>
        Compact,

        /// <summary>
        /// Detailed display format
        /// </summary>
        Detailed,

        /// <summary>
        /// Precise display format
        /// </summary>
        Precise,

        /// <summary>
        /// Adaptive format based on context
        /// </summary>
        Adaptive
    }
}
